package com.sh.web.servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/*
 * Servlet 클래 
 * - 웹요청을 처리하기 위한 자바클래스 
 * - javax.servlet.http.HttpServlet 클래스 상속 (Tomcat 라이브러리에 포함. servlet-api.jar)
 * - GET 방식 요청 - doGet 작성
 * - POST 방식 요청 - doPost 작성
 * - request(사용자 요청관련 정보), response(응답 처리를 위한 객체)객체 사용
 */

public class TestPersonGetServlet extends HttpServlet {
	@Override
		protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		String name = req.getParameter("name"); //input태그의 name 속성
		String color = req.getParameter("color"); 
		String animal = req.getParameter("animal"); 
		String[] food = req.getParameterValues("food"); 
		
		System.out.println(name);
		System.out.println(color);
		System.out.println(animal);
		System.out.println(food);
		
		}
	
	
	
}
